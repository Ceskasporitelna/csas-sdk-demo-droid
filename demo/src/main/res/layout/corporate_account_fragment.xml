<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/ll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <cz.csas.demo.components.DetailItem
            android:id="@+id/di_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/corporate_balance"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/di_disposable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/corporate_disposable"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/di_min_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/corporate_min_balance"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/di_overdraft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/corporate_overdraft"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/di_overdraft_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:setTitle="@string/corporate_overdraft_due_date"
            app:setValue="-" />

        <RelativeLayout
            android:id="@+id/rl_btn_transactions"
            android:layout_width="match_parent"
            android:layout_height="80dip">

            <Button
                android:layout_width="200dip"
                android:layout_height="53dip"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="12dip"
                android:background="@drawable/button_round_blue" />

            <Button
                android:id="@+id/btn_transactions"
                android:layout_width="200dip"
                android:layout_height="50dip"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dip"
                android:background="@drawable/button_round_white"
                android:text="@string/corporate_transactions_title"
                android:textColor="@color/csasColorPrimary"
                android:textSize="17sp" />

        </RelativeLayout>

    </LinearLayout>
</ScrollView>