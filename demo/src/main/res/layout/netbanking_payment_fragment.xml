            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/pdi_receiver_cziban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/netbanking_cziban"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/pdi_receiver_acc_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/netbanking_acc_number"
            app:setValue="-" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/pdi_receiver_bank_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            app:setTitle="@string/netbanking_bank_code"
            app:setValue="-" />

        <cz.csas.demo.components.DetailHeader
            android:id="@+id/pdh_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:setHeaderTitle="@string/netbanking_sender_title" />

        <cz.csas.demo.components.DetailItem
            android:id="@+id/pdi_sender_name"
            android:layout_width="wrap_content"
